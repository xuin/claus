<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>Bootstrap 101 Template</title>

    <!-- Bootstrap -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css"  />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="/javascripts/html5shiv-3.7.2.min.js"></script>
      <script src="/javascripts/respond-1.4.2.min.js"></script>
    <![endif]-->
  </head>
  <body>
  <h1>你好，世界！<%=dateFormat()%></h1>
  <form action="/" method="post" class="form-horizontal">
    <div class="row">
      <div class="form-group form-group-sm col-sm-4">
        <label class="col-sm-3 control-label" for="formGroupInputSmall">日志级别</label>
        <div class="col-sm-9">
          <label class="checkbox-inline">
            <input type="checkbox" id="inlineCheckbox1" value="DEBUG" name="level"/>DEBUG
          </label>
          <label class="checkbox-inline">
            <input type="checkbox" id="inlineCheckbox2" value="INFO" name="level">INFO
          </label>
          <label class="checkbox-inline">
            <input type="checkbox" id="inlineCheckbox3" value="WARN" name="level">WARN
          </label>
          <label class="checkbox-inline">
            <input type="checkbox" id="inlineCheckbox3" value="ERROR" name="level">ERROR
          </label>
          <label class="checkbox-inline">
            <input type="checkbox" id="inlineCheckbox4" value="FATAL" name="level">FATAL
          </label>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group form-group-sm col-sm-4">
        <label class="col-sm-3 control-label" for="formGroupInputSmall">时间</label>
        <div class="col-sm-9">
          <input type="text" name="daterange" value="01/01/2015 - 01/31/2015" class="form-control" />
        </div>
      </div>
      
    </div>
    <div class="row">
      <div class="form-group form-group-sm col-sm-4">
        <label class="col-sm-3 control-label" for="formGroupInputSmall">关键字</label>
        <div class="col-sm-9">
          <input class="form-control" type="text" name="keyword" id="keyword" placeholder="关键字">
        </div>
      </div>
      <button type="submit" class="btn btn-primary col-sm-1">搜索</button>
    </div>
  </form>
    <ul id="logView">
      <% for(var i=0;i<content.length;i++){ %>
            <li data-time="<%=content[i].date.getTime()%>"><%=dateFormat(content[i].date,'YYYY-MM-DD HH:mm:ss.SSS')%> [<%=content[i].threadName%>] <%=content[i].level%> [<%=content[i].loggerName%>] - <%=content[i].message%></li>
      <%}%>
    </ul>
    <div>
      <a href="javascript:forward();">更多消息</a>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/javascripts/jquery-1.11.1.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/daterangepicker/moment.min.js"></script>
    <script type="text/javascript" src="/daterangepicker/daterangepicker.js"></script>
    <script type="text/javascript">

      function forward(){
        var dataTime = $("#logView li:last").attr("data-time");
        var keyword = $("#keyword").val();
        var param = {
          "dataTime":dataTime,
          "keyword":keyword
        };
        $.post("/",param,function(data){
          debugger;
        });
      }

      $(function(){
        /*
        $('[data-toggle="popover"]').on('click',function(){
          $(this).popover('toggle');  
          return false;
        });
        $(document).on('click',function(){
          $('[data-toggle="popover"]').popover('hide');
          console.log(2);
        });*/
        $("input[type=checkbox]").on("click",function(){
          $("form").submit();
        });
        $('input[name="daterange"]').daterangepicker({timePicker:true});
      });
      
    </script>
  </body>
</html>